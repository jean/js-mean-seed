{
  "name": "js-mean-seed",
  "private": true,
  "version": "0.2.0",
  "description": "A starter project for MEAN (MongoDB, Express, Angular, Node)",
  "repository": "https://github.com/jseto/js-mean-seed.git",
  "license": "MIT",
  "devDependencies": {
    "jasmine-node": "^1.14.5",
    "karma": "~0.10",
    "karma-beep-reporter": "^0.1.4",
    "karma-junit-reporter": "^0.2.2",
    "nodemon": "^1.2.1",
    "parallelshell": "latest",
    "protractor": "^1.1.1",
    "request": "^2.51.0",
    "rimraf": "^2.2.8",
    "shelljs": "^0.2.6",
    "watch": "latest"
  },
  "dependencies": {
    "bower": "^1.3.1",
    "compression": "^1.0.3",
    "cookie-parser": "^1.3.3",
    "errorhandler": "^1.1.1",
    "express-session": "^1.9.3",
    "forever": "^0.13.0",
    "instant": "^1.6.0",
    "less": "^1.7.5",
    "loopback": "^2.8.0",
    "loopback-boot": "^2.4.0",
    "loopback-component-passport": "^1.1.0",
    "loopback-connector-mongodb": "^1.4.5",
    "loopback-datasource-juggler": "^2.7.0",
    "passport-facebook": "^1.0.3",
    "passport-google-oauth": "^0.1.5",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.2",
    "serve-favicon": "^2.0.1"
  },
  "optionalDependencies": {
    "loopback-explorer": "^1.1.0"
  },
  "scripts": {
    "postinstall": "bower install && npm run less",
    "start": "forever start -m 1 server/server.js",
    "stop": "forever stop server/server.js",
    "test": "npm run test:client && npm run test:e2e && npm run test:server",
    "test:client": "karma start test/karma.conf.js --single-run",
    "update-webdriver": "webdriver-manager update",
    "pretest:e2e": "npm run update-webdriver && npm start",
    "test:e2e": "protractor test/protractor.conf.js",
    "posttest:e2e": "npm stop",
    "test:server": "jasmine-node --captureExceptions --forceexit test/server",
    "less": "lessc less/app.less>client/bower_components/bootstrap/dist/css/bootstrap-custom.css",
    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\"",
    "preclean": "npm install rimraf",
    "clean": "rimraf client/bower_components && rimraf node_modules && git clean -d -fx",
    "build-ng-models": "lb-ng server/server.js client/models/lbServices.js",
    "watch:test:client": "karma start test/karma.conf.js",
    "watch:test:server": "jasmine-node --captureExceptions --autotest --color test/server",
    "watch:server": "nodemon --watch server -e js,json server/server.js",
    "watch:less": "watch \"npm run less\" less",
    "start:dev:client": "parallelshell \"node server/server.js\" \"npm run watch:test:client\" \"npm run watch:less\"",
    "start:dev:server": "parallelshell \"npm run watch:test:server\" \"npm run watch:server\"",
    "start:dev:all": "parallelshell \"npm run start:dev:server\" \"npm run watch:test:client\" \"npm run watch:less\""
  }
}
